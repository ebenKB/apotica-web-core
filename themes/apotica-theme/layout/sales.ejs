<%- partial('partial/sections/message-response') %>
<section class="contact-sales m-t-50 m-b-50 ">
  <div class="sales-container" id="sales-container">
    <div class="sales-row sales-heading">
      <h1 class="sales-heading__content">Contact Sales</h1>
    </div>
    <div class="m-t-40">
      <div class="sales-statement sales-row m-b-30">
          <p>Contact sales to discuss your environment, assess your requirements, or request for quote.</p>
      </div>
    </div>
    <div class="sales-row">
      <div class="sales-content  " id="sales-content" >
        <div class="sales-form__wrapper">
            <div class="sales-form__parbase">
              <div class="sales-form">
                <div class="sales-form__theme">
                  <!-- <h4 class="sales-form__heading">Contact Sales</h4> -->
                  <div class="sales-form__content">
                    <form action="" id="sales-form">
                      <div class="input-wrapper">
                        <label for="name" class="sales-input">
                          <input type="text" name="user_name" placeholder="Full name" required min="4" max="32" class="sales-input__item" pattern="[a-zA-Z\s-]+">
                        </label>
                      </div>
                      <div class="input-wrapper">
                        <label for="user" class="sales-input">
                          <input type="text" name="user_title" placeholder="Job Title" required min="3" max="32" class="sales-input__item">
                        </label>
                      </div>
                      <div class="input-wrapper">
                        <label for="company" class="sales-input">
                          <input type="text" name="user_company" placeholder="Company" min="3" max="32" required class="sales-input__item">
                        </label>
                      </div>
                      <div class="input-wrapper">
                        <label for="email" class="sales-input">
                          <input type="email" name="user_email" placeholder="Business email" required class="sales-input__item">
                        </label>
                      </div>
                      <div class="input-wrapper">
                        <label for="user" class="sales-input">
                          <input type="phone" name="user_phone" placeholder="Phone" required class="sales-input__item">
                        </label>
                      </div>
                      <div class="input-wrapper">
                        <label for="product-details" class="sales-input__textarea">
                          <input type="textarea" name="message" placeholder="Message" required min="8" max="320" class="sales-input__item sales-textarea">
                        </label>
                      </div>
                      <div class="form-item__btn">
                        <button class="btn__full-width large" type="submit" id="submit">Send my Question</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Add mail to smtp server -->
<script async type="text/javascript" src="https://cdn.emailjs.com/sdk/2.3.2/email.min.js"></script>
<%- js('js/mailer') %>
