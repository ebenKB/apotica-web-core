<section >
  <%- partial('partial/small-hero',
  {
    type: 'contact',
    isInLine:'true',
    leftContent:'Partners',
    mainContent: 'Sales'
  })%>
</section>
<section class="contact-sales m-t-50 m-b-50">
  <div class="two-column-grid">
    <div>
      <div class="row content">
        <ul class="contact-sales__items">
          <li>
            <div class="sale-item">
              <div class="caption">CONTACT SALES :</div>
              <span class="faint" >sales@apotica.net</span>
            </div>
          </li>
          <li>
            <div class="sale-item">
              <div class="caption">TALK TO A SPECIALIST :</div>
              <span class="faint" >+233-54-434-7118 +233-54-431-5710</span>
            </div>
          </li>
          <li>
            <div class="sale-item">
              <div class="caption">REQUEST A PRICE :</div>
              <span class="faint" >Complete this form</span>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div class="contact-sales__form">
      <div class="two-column-grid content">
        <div class="form-item">
          <input type="text" placeholder="Your Name" required>
        </div>
        <div class="form-item">
          <input type="text"  placeholder="E-Mail">
        </div>
      </div>
      <div class="row">
        <div class="form-item">
          <textarea name="" id="" cols="58" rows="8" placeholder="Product Details" required></textarea>
        </div>
      </div>
      <div class="two-column-grid content">
        <div class="form-item">
          <input type="text"  placeholder="Phone" required>
        </div>
        <div class="form-item">
          <button class="btn large">SEND REQUEST</button>
        </div>
      </div>
    </div>
  </div>
</section>
