<section >
  <%- partial('partial/small-hero',
  {
    type: 'contact',
    isInLine:'true',
    leftContent:'Partners',
    mainContent: 'Sales'
  })%>
</section>
<section class="contact-sales m-t-50 m-b-50">
  <div class="two-column-grid">
    <div>
      <div class="row content">
        <ul class="contact-sales__items">
          <li>
            <div class="sale-item">
              <div class="caption">CONTACT SALES :</div>
              <span class="faint" >sales@apotica.net</span>
            </div>
          </li>
          <li>
            <div class="sale-item">
              <div class="caption">TALK TO A SPECIALIST :</div>
              <span class="faint" >+233-54-434-7118 +233-54-431-5710</span>
            </div>
          </li>
          <li>
            <div class="sale-item">
              <div class="caption">REQUEST A PRICE :</div>
              <span class="faint" >Complete this form</span>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div class="contact-sales__form">
      <form action="https://formspree.io/unveilface@gmail.com" method="POST" id="contact-form">
      <div class="two-column-grid content">
        <div class="form-item">
          <input type="text" name="name" placeholder="Your Name" required minlength="3" maxlength="32">
        </div>
        <div class="form-item">
          <input type="email" name="_replyto" placeholder="Business E-Mail" required>
        </div>
      </div>
      <div class="row">
        <div class="form-item">
          <textarea name="message" id="" cols="58" rows="8" placeholder="Product Details" required minlength="3"></textarea>
        </div>
      </div>
      <div class="two-column-grid content">
        <div class="form-item">
          <input type="phone"  name="phone" placeholder="Phone" required pattern="[0-9]+">
        </div>
        <div class="form-item">
          <button class="btn large" type="submit" id="submit">SEND REQUEST</button>
        </div>
      </div>
    </form>
    </div>
  </div>
</section>
